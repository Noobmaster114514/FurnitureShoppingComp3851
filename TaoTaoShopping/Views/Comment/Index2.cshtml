@model IEnumerable<TaoTaoShopping.Models.comment>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h2 align="center">My Comments</h2>
@* Search Area *@
<div class="row" style="margin:10px 0;">
    <div class="col-lg-12">
        <center>
            <form action="" method="get">
                Search Comment Content: <input type="text" class="form-control" style="display:inline-block;width:200px;" name="keyword" value="@(Request.QueryString["keyword"] != null ? Request.QueryString["keyword"] : "" )" placeholder="Enter keyword" /> <input type="submit" name="submit" value="Search" class="btn btn-info" />
            </form>
        </center>
    </div>
</div>
<table class="table">
    <tr>
        <th>
            Comment Content
        </th>
        <th>
            Comment Time
        </th>
        <th>
            Commented Product
        </th>
        <th>
            Commenter
        </th>
        <th>Actions</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.detail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.createtime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.shopping.title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.user.username)
            </td>
            <td>
                <a href="/Comment/Delete?id=@item.id" onclick="return confirm('Are you sure you want to delete this data?')" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    }

</table>
