@model IEnumerable<TaoTaoShopping.Models.admin>

@{
    ViewBag.Title = "Index";
}

<h2 align="center">Administrator Management</h2>

<p>
    <a href="/Admins/Create" class="btn btn-success">Add Administrator</a>
</p>
@* Search Area *@
<div class="row" style="margin:10px 0;">
    <div class="col-lg-12">
        <center>
            <form action="" method="get">
                Search Nickname: <input type="text" class="form-control" style="display:inline-block;width:200px;" name="keyword" value="@(Request.QueryString["keyword"] != null ? Request.QueryString["keyword"] : "" )" placeholder="Enter keyword" /> <input type="submit" name="submit" value="Search" class="btn btn-info" />
            </form>
        </center>
    </div>
</div>
<table class="table">
    <tr>
        <th>
            Username
        </th>
        <th>
            Nickname
        </th>
        <th>
            Authority
        </th>
        <th>
            Add Time
        </th>
        <th>Actions</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nickname)
            </td>
            <td>
                @if (item.power == 1)
                {
                    <b>Super Administrator</b>
                }
                else
                {
                    <b>Administrator</b>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.createtime)
            </td>
            <td>
                <a href="/Admins/Edit?id=@item.id" class="btn btn-warning">Edit</a>
                <a href="/Admins/Delete?id=@item.id" onclick="return confirm('Are you sure you want to delete this data?')" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    }

</table>
