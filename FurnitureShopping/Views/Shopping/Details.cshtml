@model FurnitureShopping.Models.shopping

@{
    ViewBag.Title = "Details";
}

<h2>Product Details</h2>

<div>
    <dl class="dl-horizontal">
        <dt>
            Product Name:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.title)
        </dd>

      

        <dt>
            Price:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.sale_price)
        </dd>

        <dt>
            Quantity:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.number)
        </dd>

        <dt>
            Description:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.detail)
        </dd>

        <dt>
            Product Cover:
        </dt>

        <dd>
            @if (string.IsNullOrEmpty(Model.img))
            {
                <img src="~/Content/pic/0411171619.png" width="100" height="100" alt="Alternate Text" />
            }
            else
            {
                <img src="@Model.img" width="100" height="100" alt="Alternate Text" />
            }
        </dd>

        <dt>
            Product Number:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.shop_number)
        </dd>

        <dt>
            Product Category:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.category.catename)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Back to list", "Index")
</p>
