@model FurnitureShopping.Models.user

@{
    ViewBag.Title = "Details";
}

<h2 align="center">User Details</h2>

<div class="container">
    <dl class="dl-horizontal">
        <dt>
            Username:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.username)
        </dd>

        <dt>
            Password:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.pwd)
        </dd>

        <dt>
            Nickname:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.nickname)
        </dd>

        <dt>
            Gender:
        </dt>
        <dd>
            @if (Model.sex == 1)
            {
                <b>Male</b>
            }
            else
            {
                <b>Female</b>
            }
        </dd>

        <dt>
            Introduction:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.introduce)
        </dd>

        <dt>
            Age:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.age)
        </dd>

        <dt>
            Profile Picture:
        </dt>
        <dd>
            @if (string.IsNullOrEmpty(Model.img))
            {
                <img src="~/Content/pic/0411171619.png" width="100" height="100" alt="Alternate Text" />
            }
            else
            {
                <img src="@Model.img" width="100" height="100" alt="Alternate Text" />
            }
        </dd>
    </dl>
</div>

<p align="center">
    @Html.ActionLink("Back to User Management List", "Index", null, new { @class = "btn btn-primary" })
</p>
