<!-- Product Area -->
<div class="w1200">
    <!-- Fourth Area -->
    <div class="day_box">
        <div class="qinha_title">
            <div class="v_h2">
                Looking for a piece of furniture in Singapore for a new place, office, business? Then you came to the right site. We provide top quality furniture at a reasonable price.
            </div>
        </div>
        <ul class="day_goods">
            @* Loop through products, excluding "default" products *@
            @foreach (FurnitureShopping.Models.shopping item in Model.Where(x => x.title != "default"))
            {
                <li>
                    <a href="/Home/Detail?id=@item.id" class="a_con_list">
                        <p class="p_img"><img src="@item.img" /></p>
                    </a>
                    <p class="p_title">
                        <span></span>@item.title
                    </p>

                    <p class="p_p">
                        <span class="price1">$<span>@item.sale_price</span></span>
                        @if (item.price != item.sale_price)
                        {
                            <span class="price2"><del>$@item.price</del></span>
                        }
                    </p>
                </li>
            }
        </ul>
    </div>
    <!-- Fourth Area -->
</div>
