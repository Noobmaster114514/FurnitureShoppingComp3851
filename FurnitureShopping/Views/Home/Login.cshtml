@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Furniture Mall Login</title>
    <link rel="stylesheet" type="text/css" href="/Content/css/login.css" />
</head>
<body>
    <div id="append"></div>
    <div class="full_sc">
        <div class="head_cent head_cwo ClearFix">
            <div class="h_logo">
                <a href="">
                    <img src="/Content/image/logo.png" style="width: 206px;height: 206px" />
                </a>
            </div>
            <div class="h_right">
                <img src="/Content/image/top_center.png" style="width: 622px;height: 206px" />
            </div>
        </div>
    </div>
    <div class="w980 ClearFix">
        <div class="logo_box ClearFix">
            <div class="login_b_l ClearFix">
                <a href="" title="test">
                    <img style="width: 560px;height: 360px;" src="/Content/image/index5.jpg" alt="test" />
                </a>
            </div>
            <div class="login_b_r ClearFix">
                <div class="loginul ClearFix">
                    <div class="login_h2 ClearFix">
                        <h2>Login to Furniture Mall</h2>
                        <div class="lognrtop">
                            Do not have an account?<a href="/Home/Register">Register</a>
                        </div>
                    </div>
                    <div class="co">
                        <div class="from">
                            <form id="myForm" action="" method="post">
                                <div class="item">
                                    <input class="itxt" name="username" id="username" placeholder="Username" value="">
                                    <div class="err_box">
                                        <div class="err_msg2" style="display: none;">
                                            Please Enter Correct Username
                                        </div>
                                    </div>
                                </div>
                                <div class="item">
                                    <input class="itxt" placeholder="Please Enter Password" name="pwd" id="pwd" type="password">
                                    <div class="err_box">
                                        <div class="err_msg2" style="display: none;">Password</div>
                                    </div>
                                </div>
                                <div class="item">
                                    <div class="login-btn">
                                        <a tabindex="6" id="loginsubmit" class="btn-img btn-entry" href="javascript:;">Login</a>
                                    </div>
                                </div>
                            </form>
                        </div>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
@* 引入jquery的类库 *@
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script>
    $("#loginsubmit").click(function () {
        //获取用户名和密码回来
        var username = $("#username").val();
        var pwd = $("#pwd").val();
        if (username.length < 1) {
            alert("Please Enter Username！");
            return;
        }
        if (pwd.length < 1) {
            alert("Please Enter Password！");
            return;
        }
        
        //提交表单
        $("#myForm").submit();
    });
</script>
