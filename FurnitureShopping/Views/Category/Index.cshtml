@model IEnumerable<FurnitureShopping.Models.category>

@{
    ViewBag.Title = "Index";
}

<h2 align="center">Category Management</h2>

<p>
    <a href="/Category/Create" class="btn btn-success">Add Category</a>
</p>

@* Search Area *@
<div class="row" style="margin:10px 0;">
    <div class="col-lg-12">
        <center>
            <form action="" method="get">
                Search Category:
                <input type="text"
                       class="form-control"
                       style="display:inline-block;width:200px;"
                       name="keyword"
                       value="@(Request.QueryString["keyword"] != null ? Request.QueryString["keyword"] : "")"
                       placeholder="Enter keyword" />
                <input type="submit" name="submit" value="Search" class="btn btn-info" />
            </form>
        </center>
    </div>
</div>

<table class="table">
    <tr>
        <th>
            Product Category Name
        </th>
        <th>Actions</th>
    </tr>

    @foreach (var item in Model)
    {
        if (item.catename == "default") // Skip the row if category name is "default"
        {
            continue;
        }

        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.catename)
            </td>
            <td>
                <a href="/Category/Edit?id=@item.id" class="btn btn-warning">Edit</a>
                <a href="/Category/Delete?id=@item.id" onclick="return confirm('Are you sure you want to delete this data?')" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    }
</table>
